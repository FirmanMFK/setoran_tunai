<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/default_appbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_medium"
                android:layout_marginRight="@dimen/default_margin_medium"
                android:layout_marginTop="@dimen/default_margin_small"
                android:layout_marginBottom="@dimen/default_margin_small"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:padding="@dimen/default_margin_small"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_id_setoran"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_id_invoice"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_no_rekening"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_jumlah"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_kantor"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_medium"
                android:layout_marginRight="@dimen/default_margin_medium"
                android:layout_marginTop="@dimen/default_margin_small"
                android:layout_marginBottom="@dimen/default_margin_small"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:padding="@dimen/default_margin_small"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_no_cetak"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_no_nota"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_tgl_invoice"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_asal_biaya"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_nm_karyawan"
                        android:textSize="@dimen/default_textview_textsize_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin_small"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>