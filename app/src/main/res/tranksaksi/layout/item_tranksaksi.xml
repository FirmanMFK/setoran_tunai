<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/default_margin_medium"
    android:layout_marginRight="@dimen/default_margin_medium"
    android:layout_marginTop="@dimen/default_margin_small"
    android:layout_marginBottom="@dimen/default_margin_small"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:padding="@dimen/default_margin_small"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_id_setoran"
            android:textSize="@dimen/default_textview_textsize_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_small"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_id_invoice"
            android:textSize="@dimen/default_textview_textsize_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_small"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_no_rekening"
            android:textSize="@dimen/default_textview_textsize_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_small"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_jumlah"
            android:textSize="@dimen/default_textview_textsize_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_small"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_kantor"
            android:textSize="@dimen/default_textview_textsize_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_small"/>
    </LinearLayout>
</android.support.v7.widget.CardView>